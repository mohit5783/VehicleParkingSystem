@model VehicleParkingSystem.Models.Vehicle
<section class="content-header">
    <h1>
        UnPark
        <small>Get your Vehicle Un-Parked</small>
    </h1>
</section>

<section class="content container-fluid">
    <div class="row" align="center">
        <table style=" border: 1px solid #1C6EA4;  background-color: #EEEEEE;  width: 60%;    border-collapse: collapse;">
            <tr>
                <td>Session ID</td>
                <td>@Html.DisplayFor(model => model.SessionID)</td>
            </tr>
            <tr>
                <td>Plate Number</td>
                <td>@Html.DisplayFor(model => model.PlateNumber)</td>
            </tr>
            <tr>
                <td>In Time</td>
                <td>@Html.DisplayFor(model => model.InTime)</td>
            </tr>
            <tr>
                <td>Gate IP</td>
                <td>@Html.DisplayFor(model => model.InMACIP)</td>
            </tr>
        </table>
    </div>

    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SessionID)
            @Html.HiddenFor(model => model.PlateNumber)
            @Html.HiddenFor(model => model.InTime)
            @Html.HiddenFor(model => model.InMACIP)
            <div class="form-group">
                @Html.LabelFor(model => model.OutMACIP)
                @Html.EditorFor(model => model.OutMACIP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OutMACIP, "", new { @class = "text-danger" })
            </div>

            <input type="submit" value="Un Park My Vehicle" class="btn btn-default" />
        }
    </div>
</section>